{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "declaration": false,
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"],
      "~img/*": ["./src/assets/img/*"]
    }
  }
}
